
<h1> <%= name %></h1>

<% if(locals.user) {%>
<section>
    <h5 style="text-align : left; margin-left :7.5%"> Create a Tweet!</h5>
    <form class="form-group" action="/tweets/create" method="POST">
        <textarea name="content" id="" cols="80" rows="5" placeholder="Your Tweet.."></textarea>
        <input type="submit" class="btn btn-primary" value="Create Tweet">
    </form>

</section>
<% } %>

<div >
    <ul>
        
        <% for(tweet of tweets) {%>
           <%- include('./tweets/_tweet') %>
        <% } %>
    </ul>
</div>

<section>
    <h3>Users</h3>
    <% for(current_user of users) {%>
         <p>
            <a href="/users/profile/<%= current_user.id %>"> <%= current_user.name  %></a>
         </p>
    <% } %>
</section>

